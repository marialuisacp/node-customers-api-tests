{
  "name": "node-customers-api",
  "version": "1.0.0",
  "description": "NodeJs Customers API",
  "main": "index.js",
  "scripts": {
    "test": "mocha '__tests__/unit/**/*.js' --recursive",
    "contract": "mocha '__tests__/contract/**/*.js' --recursive",
    "coverage": "nyc mocha '__tests__/unit/**/*.js' --recursive",
    "start": "node src/index.js",
    "test:report": "nyc report --reporter=lcov --reporter=text --reporter=json-summary",
    "test:badges": "node dev_scripts/get-coverage.js"
  },
  "nyc": {
    "extension": [
      ".js"
    ],
    "reporter": [
      "json-summary",
      "lcov",
      "text"
    ],
    "include": [
      "src"
    ],
    "exclude": "**/*.mock.js"
  },
  "author": "Maria Lu√≠sa",
  "license": "ISC",
  "dependencies": {
    "@std/esm": "^0.26.0",
    "axios": "^0.21.1",
    "axios-mock-adapter": "^1.19.0",
    "basic-auth": "^2.0.1",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.6.0",
    "express": "^4.16.4",
    "express-basic-auth": "^1.2.0",
    "mocha": "^10.7.3",
    "mongodb": "^3.6.3",
    "node-schedule": "^1.3.2",
    "nyc": "^15.1.0",
    "query-string": "^6.11.0",
    "querystring": "^0.2.0",
    "rand-token": "^0.4.0",
    "request": "^2.88.0",
    "shell-exec": "^1.0.2",
    "sinon": "^9.2.1",
    "sinon-mongo": "^1.1.0",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "joi": "^17.3.0",
    "joi-assert": "0.0.3",
    "supertest": "^6.1.3"
  }
}
